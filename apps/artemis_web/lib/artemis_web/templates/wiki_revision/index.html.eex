<div id="content-header">
  <header>
    <h1>Documentation Revisions</h1>
  </header>
</div>

<div id="content-navigation">
  <%= render_breadcrumbs @conn %>
</div>

<div id="content">
  <%= render_flash_notifications @conn %>

  <%= render_search @conn %>

  <table class="ui table selectable">
    <thead>
      <tr>
        <th><%= sortable_table_header(@conn, "slug", "Slug") %></th>
        <th><%= sortable_table_header(@conn, "title", "Title") %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render_table_row_if_empty(@wiki_revisions.entries) %>
      <%= for wiki_revision <- @wiki_revisions.entries do %>
        <tr>
          <td>
            <%= if has?(@conn, "wiki-revisions:show") do %>
              <%= link wiki_revision.slug, to: Routes.wiki_page_wiki_revision_path(@conn, :show, @wiki_page, wiki_revision) %>
            <% else %>
              <%= wiki_revision.slug %>
            <% end %>
          </td>
          <td><%= wiki_revision.title %></td>
          <td>
            <%= if has?(@conn, "wiki-revisions:show") do %>
              <%= link "Show", to: Routes.wiki_page_wiki_revision_path(@conn, :show, @wiki_page, wiki_revision) %>
            <% end %>
            <%= if has?(@conn, "wiki-revisions:delete") do %>
              <%= link "Delete", to: Routes.wiki_page_wiki_revision_path(@conn, :delete, @wiki_page, wiki_revision), method: :delete, data: [confirm: "Are you sure?"] %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= render_pagination @conn, @wiki_revisions %>
</div>
